# Photo Metadata Catalog - Environment Configuration Template 
# ==============================================================================
# ENVIRONMENT SETTINGS
# ==============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# ==============================================================================
# API CONFIGURATION
# ==============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://photo_user:photo_password@localhost:5432/photo_catalog

# SQLite (for local development)
# DATABASE_URL=sqlite:///./photo_catalog.db

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ==============================================================================
# REDIS CONFIGURATION (for Celery and Caching)
# ==============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIMEOUT=300  # 5 minutes

# ==============================================================================
# AI MODEL CONFIGURATION
# ==============================================================================
# Model Storage
MODELS_CACHE_DIR=./models
MODELS_MAX_MEMORY_GB=8  # Maximum memory for model loading

# HuggingFace Configuration
HUGGINGFACE_CACHE_DIR=./models/huggingface
HUGGINGFACE_TOKEN=  # Optional: for private models or higher rate limits

# Default Models (can be overridden per request)
DEFAULT_EMBEDDING_MO