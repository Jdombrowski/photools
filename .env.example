# Photools - Simple Environment Configuration
# Copy this file to .env and customize as needed

# ==============================================================================
# PROJECT SETTINGS
# ==============================================================================
PROJECT_NAME=photools
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# ==============================================================================
# DOCKER SETTINGS
# ==============================================================================
DOCKERFILE=Dockerfile
POSTGRES_VERSION=15-alpine
REDIS_VERSION=7-alpine

# ==============================================================================
# DATABASE SETTINGS # TODO move into reading from ENV vars for diff environments 
# ==============================================================================
POSTGRES_DB=photo_catalog
POSTGRES_USER=photo_user
POSTGRES_PASSWORD=photo_password
POSTGRES_PORT=5432

# ==============================================================================
# REDIS SETTINGS
# ==============================================================================
REDIS_PORT=6378

# ==============================================================================
# API SETTINGS
# ==============================================================================
API_PORT=8000

# ==============================================================================
# CELERY SETTINGS
# ==============================================================================
CELERY_LOG_LEVEL=info

# ==============================================================================
# MONITORING
# ==============================================================================
FLOWER_PORT=5555

# ==============================================================================
# DIRECTORIES
# ==============================================================================
UPLOAD_DIR=./uploads
MODELS_DIR=./models